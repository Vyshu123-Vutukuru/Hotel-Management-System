    if (code <= 3) return 'â›…'; // Partly cloudy
    if (code > 3 && code <= 48) return 'â˜'; // Fog
    if (code > 48 && code <= 65) return 'ðŸŒ§'; // Rain
    if (code > 65 && code <= 77) return 'â„'; // Snow
    if (code > 77) return 'â›ˆ'; // Thunderstorm
    return '-';
